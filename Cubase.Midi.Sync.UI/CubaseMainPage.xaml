<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cubase.Midi.Sync.UI.CubaseMainPage"
             Title="Main Menu">

    <Grid>
        <!-- Your content -->

        <ScrollView x:Name="ScrollView" Orientation="Vertical">
            <FlexLayout x:Name="CollectionsLayout"
                    Direction="Row"
                    Wrap="Wrap"
                    JustifyContent="Start"
                    AlignItems="Start"
                    Margin="10"
                    Padding="5"
                    HorizontalOptions="Fill"
                    VerticalOptions="Start" />
        </ScrollView>

        <ActivityIndicator x:Name="LoadingSpinner"
                           IsVisible="False"
                           IsRunning="False"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           Color="Purple"
                           WidthRequest="60"
                           HeightRequest="60"/>


        <!-- Overlay spinner -->
    </Grid>
</ContentPage>