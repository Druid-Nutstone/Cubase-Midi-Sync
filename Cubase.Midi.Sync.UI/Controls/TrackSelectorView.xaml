<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cubase.Midi.Sync.UI.Controls.TrackSelectorView">



        <ScrollView Orientation="Vertical" Grid.Row="1" Grid.RowSpan="2">
            <VerticalStackLayout Spacing="10">
                <Button 
                    x:Name="MaxMinButton" 
                    BackgroundColor="LightGray" 
                    TextColor="Black" 
                    CornerRadius="0"
                    BorderWidth="0"
                    FontSize="14"
                    Text="Select Tracks - Close">
                </Button>
                <FlexLayout 
                   x:Name="TrackLayout"
                   Direction="Row"
                   Wrap="Wrap"
                   JustifyContent="Start"
                   AlignItems="Start"
                  Margin="10" />
                <FlexLayout 
                  x:Name="TrackButtons"
                   Direction="Row"
                   Wrap="Wrap"
                   JustifyContent="Start"
                   AlignItems="Start"
                  Margin="10" />                    
        </VerticalStackLayout>
        </ScrollView>


</ContentView>
