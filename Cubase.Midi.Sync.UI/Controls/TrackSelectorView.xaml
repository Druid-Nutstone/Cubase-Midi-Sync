<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cubase.Midi.Sync.UI.Controls.TrackSelectorView">



        <ScrollView Orientation="Vertical" Grid.Row="1" Grid.RowSpan="2">
            <VerticalStackLayout Spacing="10">
                <Button 
                    x:Name="MaxMinButton" 
                    BackgroundColor="LightGray" 
                    TextColor="Black" 
                    CornerRadius="0"
                    BorderWidth="0"
                    FontSize="14"
                    Text="Select Tracks - Close">
                </Button>
            <HorizontalStackLayout x:Name="FilterCollection" Spacing="20" Padding="6">
                <Label Text="Filter:" TextColor="White" VerticalTextAlignment="Center" />

                <Grid>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer />
                    </Grid.GestureRecognizers>
                    <CheckBox x:Name="AudioFilter" CheckedChanged="OnFilterChanged" />
                    <Label Text="Audio" TextColor="White" VerticalOptions="Center" Margin="28,0,0,0"/>
                </Grid>

                <Grid>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer />
                    </Grid.GestureRecognizers>
                    <CheckBox x:Name="MidiFilter" CheckedChanged="OnFilterChanged" />
                    <Label Text="MIDI" TextColor="White" VerticalOptions="Center" Margin="28,0,0,0"/>
                </Grid>

                <Grid>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer />
                    </Grid.GestureRecognizers>
                    <CheckBox x:Name="GroupFilter" CheckedChanged="OnFilterChanged" />
                    <Label Text="Groups" TextColor="White" VerticalOptions="Center" Margin="28,0,0,0"/>
                </Grid>
            </HorizontalStackLayout>

            <FlexLayout 
                   x:Name="TrackLayout"
                   Direction="Row"
                   Wrap="Wrap"
                   JustifyContent="Start"
                   AlignItems="Start"
                   Margin="1" />
                <FlexLayout 
                  x:Name="TrackButtons"
                   Direction="Row"
                   Wrap="Wrap"
                   JustifyContent="Start"
                   AlignItems="Start"
                  Margin="1" />                    
        </VerticalStackLayout>
        </ScrollView>


</ContentView>
